aliases:
  p: 
    aliases: [push]
    desc: start lint and git push
    cmds:
      - golangci-lint run
      - git push origin main

  l: 
    aliases: [lint]
    desc: start lint
    cmds:
      - golangci-lint run

  db: 
    aliases: [db, run, r]
    desc: start database
    cmds:
      - go run cmd/db/main.go

  cli:
    aliases: [c, repl]
    desc: start repl database client
    cmds:
      - go run cmd/cli/main.go

  t:
    aliases: [test, tests]
    desc: start tests
    cmds:
      - go test ./...
