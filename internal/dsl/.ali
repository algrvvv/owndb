aliases:
  t: 
    desc: start dsl tests
    aliases: [test, tests]
    cmds:
      - go test .

  r: 
    desc: start dsl tests && rewrite hashes
    aliases: [test, tests]
    cmds:
      - go test . -args rewrite
      - echo "\n\ntests hash rewrited\nrestarting testing\n\n" && sleep 2
      - go test . -v
